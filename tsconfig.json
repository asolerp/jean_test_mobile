{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2019"],
    "noEmit": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@src/*": ["src/*"],
    },
    "types": ["jest"]
  }
}
